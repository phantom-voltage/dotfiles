#include "/home/phantom/.config/term_colors"

#Extensions
URxvt.perl-ext:
URxvt.perl-ext-common:      default,clipboard,url-select,keyboard-select
URxvt.url-select.launcher:  firefox 

#URL cosmetics
URxvt.url-select.underline: true
URxvt.colorUL: #77abff

#Clickable URL's
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

#Yankable URL's
#URxvt.keysym.M-f: perl:matcher:last
URxvt.keysym.M-f: perl:matcher:list

URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search

#Copy & Paste
URxvt.keysym.M-c:       perl:clipboard:copy
URxvt.keysym.M-v:       perl:clipboard:paste
URxvt.iso14755: False

!URxvt.font: -misc-fixed-medium-r-normal--15-140-75-75-c-90-iso8859-1
!URxvt.font: -misc-tamsyn-medium-r-normal-*-13-94-*-*-*-*-iso8859-1
!URxvt.boldFont: -misc-tamsyn-medium-r-normal-*-13-94-*-*-*-*-iso8859-1
!URxvt.boldFont: -*-tamsyn-medium-*-*-*-14-*-*-*-*-*-*-*
URxvt.boldFont: -*-gohufont-medium-*-*-*-11-*-*-*-*-*-*-*
URxvt.font: -*-gohufont-medium-*-*-*-11-*-*-*-*-*-*-*
URxvt.letterSpace: 0

URxvt.cursorBlink: 1

URxvt*scrollBar:        false
URxvt*scrollBar_right:        true
